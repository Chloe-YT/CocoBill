<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/bg_common_card_white"
    android:padding="@dimen/padding_normal">

    <FrameLayout
        android:layout_width="@dimen/image_category"
        android:layout_height="@dimen/image_category"
        android:padding="@dimen/padding_micro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/icBgNormal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivCategoryRes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tint="@color/icColorNormal"
            tools:src="@drawable/ic_category_card" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
